<h1 class="margin-padding">What our assistants say about us</h1>
<div class="container d-flex flex-column py-4">

  <div class="row gx-4">
    <% @comments.each do |comment| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card p-2 border rounded bg-light shadow-lg">
        <div class="card-body">
          <div class="d-flex justify-content-around align-items-cemter py-2">
            <div><%= cl_image_tag comment.assistant.photo.key, class:"avatar-md rounded-circle", crop: :thumb, gravity: :face %></div>
            <div class="flex-1 px-4">
              <h3 class="font-size-16 m-0 py-2">
                "<%= comment.title %>"
              </h3>
            </div>
          </div>
          <div class="d-flex flex-column align-items-center py-2">
            <p class="text-muted py-1 mb-0"><i class="fa-regular fa-comment-dots font-size-15 align-middle pe-2 icon-text"></i> <%= comment.content %></p>
            <p class="text-muted py-1 mb-0">
              <% comment.rating.times do %><i class="fas fa-star font-size-15 align-middle pe-2 icon-text"></i>
              <% end %>
            </p>
          </div>
          <div class="d-flex flex-column align-items-center py-2">
            <p class="text-muted py-1 mb-0"><i class="fa-solid fa-user font-size-15 align-middle pe-2 icon-text"></i> <%= comment.name %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row g-0 align-items-center pb-4">
    <div class="col-sm-6"></div>
    <div class="col-sm-6">
      <div class="float-sm-end">
        <ul class="pagination mb-sm-0">
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to "<", comments_path(page: @page - 1) %> </li>
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to "1", comments_path %> </li>
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to "2", comments_path(page: 1) %> </li>
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to "3", comments_path(page: 2) %> </li>
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to ">", comments_path(page: @page + 1) %> </li>
        </ul>
      </div>
    </div>
  </div>
</div>
