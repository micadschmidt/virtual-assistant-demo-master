<div class="container-log vh-100 ">
  <div class="wrapper-log card shadow-lg mb-0 mx-3">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <h1 class="py-3">Login</h1>
      <%= f.error_notification %>
      <%# <p>If you are already a member, easily log in</p> %>
      <div class="pass-icon w-100 px-2">
        <%= f.input_field :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, id:"email", placeholder:"Email", class:"w-100" %>
        <%= f.input_field :password, required: true, input_html: { autocomplete: "password" }, id:"password", placeholder:"Password", class:"w-100" %>
        <%# <img src="https://cdn.pixabay.com/photo/2016/12/18/11/04/eye-1915454_960_720.png"> %>
        <%= f.button :submit, "Log in", id:"login-btn", class:"w-100" %>

        <div class="register">
          <p>Create an account</p>
          <%= link_to "Registrer", new_registration_path(resource_name), class:"register-btn" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="main-img shadow-lg"></div>
</div>
