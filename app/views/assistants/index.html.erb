<div class="container main pt-5">
  <div class="pt-5"><h1 class="pt-4 text-center">See all our Assistants</h1> </div>
  <div class="row pb-4">
    <div class="col-12">
      <div class="card border rounded bg-light shadow-lg mb-0 search-form">
        <div class="card-body p-0">
          <%= form_with url: assistants_path, method: :get, id:"search-form", class: "d-flex" do %>
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find an assistant by skills or availability" %>
          <%= submit_tag "Search", class: "btn btn-soft profile-btn btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
  <% @assistants.each do |assistant| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card p-2 border rounded bg-light shadow-lg">
        <div class="card-body">
          <div class="d-flex justify-content-around align-items-cemter py-2">
            <%= cl_image_tag assistant.photo.key, class:"avatar-md rounded-circle", crop: :thumb, gravity: :face %>
            <div class="flex-1 px-4">
              <h5 class="font-size-16 m-0 py-2">
                <%= assistant.firstname %>
              </h5>
              <h5 class="font-size-16 m-0 py-2">
                <%= assistant.lastname %>
              </h5>
            </div>
          </div>
          <div class="d-flex flex-column align-items-start py-2">
            <p class="text-muted py-1 mb-0"><i class="mdi mdi-phone font-size-15 align-middle pe-2 icon-text"></i> <%= assistant.user.phone %></p>
            <p class="text-muted py-1 mb-0"><i class="mdi mdi-email font-size-15 align-middle pe-2 icon-text"></i> <%= assistant.user.email %></p>
            <p class="text-muted py-1 mb-0"><i class="mdi mdi-google-maps font-size-15 align-middle pe-2 icon-text"></i> <%= assistant.availability %></p>
            <p class="text-muted py-1 mb-0"><i class="mdi mdi-briefcase-plus font-size-15 align-middle pe-2 icon-text"></i> <%= assistant.skills.gsub(/\"/, '').split(",").join(",").gsub('[,', '').gsub(']', '') %> </p>
          </div>
          <div class="d-flex gap-2 pt-4">
            <%= link_to "Profile", assistant_path(assistant), class:"btn profile-btn btn-sm w-50" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>

  <div class="row g-0 align-items-center pb-4">
    <%# <div class="col-sm-6"></div> %>
    <div class="col-12">
      <div class="float-sm-end">
        <ul class="pagination mb-sm-0">
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to "<", assistants_path(page: @page - 1) %> </li>
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to "1", assistants_path %> </li>
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to "2", assistants_path(page: 1) %> </li>
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to "3", assistants_path(page: 2) %> </li>
          <li class="page-item icon-text"><a class="page-link icon-text" <%= link_to ">", assistants_path(page: @page + 1) %> </li>
        </ul>
      </div>
    </div>
  </div>
</div>
